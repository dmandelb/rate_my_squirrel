<!DOCTYPE html>
<html>
<head>
  <title>RateMySquirrel</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <h1><%= link_to 'RATE MY SQUIRREL', root_path %></h1>
    <% if logged_in? %>
    <p>Welcome, <%= current_user.username %> | <%= link_to 'Log out', '/session', method: :delete %></p>
    <% else %>
    <p><a href="/session/new">Log in</a> | <a href="/users/new">Register</a></p>
    <% end %>
  </header>

<%= yield %>

</body>
</html>
